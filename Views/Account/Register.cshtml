@model Proyecto_RadixWeb.Models.MultipleClassRegistrar
@{
    ViewBag.Title = "Register";
}
<link href="~/Content/estilosRegistrar.css" rel="stylesheet" />
<div class="container" style=" width: 100%;">
    <div class="row" style="width: 50%;
    margin-left: 260px;">
        @*<div class="" style="width:450px;margin-left: 25%;height: 200px;">*@
        <div class="form-login" style="margin-top: 5%;margin-top: 5%;width: 75%;margin-left: 25%;">
            <section id="loginForm">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <h4 style="margin-left: 27%;height: 30px;">Registrarse</h4>
                    <div class="input-group inputregistrar" style="height: 50px;">
                        @*@Html.Label("Empresa", new { @class = "col-md-2 control-label " })*@
                        @*@Html.LabelFor(model => model.objEmpresas.Emp_Nom, htmlAttributes: new { @class = "control-label col-md-2" })*@
                        <div class="col-md-10" style="text-align:center">
                            @Html.EditorFor(model => model.objEmpresas.Emp_Nom, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese Nombre de la Empresa", @style = "text-align:center" } })
                            @Html.ValidationMessageFor(model => model.objEmpresas.Emp_Nom, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="input-group inputregistrar" style="height: 50px;">
                        @*@Html.LabelFor(m => m.objRegistrar.Email, new { @class = "col-md-2 control-label" })*@
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.objRegistrar.Email, new { @class = "form-control", placeholder = "Ingrese Email", @style = "text-align:center" })
                        </div>
                    </div>
                    <div class="input-group inputregistrar" style="height: 50px;">
                        @*@Html.Label("Contraseña", new { @class = "col-md-2 control-label " })*@
                        @*@Html.LabelFor(m => m.objRegistrar.Password, new { @class = "col-md-2 control-label" })*@
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.objRegistrar.Password, new { @class = "form-control", placeholder = "Ingrese Contraseña", @style = "text-align:center" })
                        </div>
                    </div>
                    <div class="input-group inputregistrar" style="height: 50px;">
                        @*@Html.Label("Confirmar Contraseña", new { @class = "col-md-2 control-label " })*@
                        @*@Html.LabelFor(m => m.objRegistrar.ConfirmPassword, new { @class = "col-md-2 control-label" })*@
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.objRegistrar.ConfirmPassword, new { @class = "form-control", placeholder = "Confirmar Contraseña", @style = "text-align:center" })
                        </div>
                    </div>
                    <div class="wrapper" style="margin-left: 30%;">
                        <span class="group-btn">
                            <input type="submit" value="Registrarse" class="btn btn-primary btn-md" />
                        </span>
                    </div>

                }
            </section>
        </div>
        @*</div>*@

    </div>
</div>













